/**index.wxss**/
page {
  background-color: #F0F0F0;
}
image {
  width: 750rpx;
  height: 320rpx;
  vertical-align: middle;
}

swiper {
  height: 320rpx;
}

.title {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #3C3C3C;
  font-weight: 700;
  font-family: FZLTCHJW--GB1-0;
  background-color: #fff;
  box-sizing: border-box;
}

.item {
  margin: 20rpx 0;
}
.item .infos {
  width: 750rpx;
  height: 180rpx;
  box-sizing: border-box;
  padding: 16rpx 34rpx 22rpx 30rpx;
  position: relative;
  background-color: #fff;
}
.item .infos .name {
  width: 590rpx;
  color: #3C3C3C;
  font-size: 30rpx;
}
.item .infos .price {
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  color: #FE6249;
  font-size: 30rpx;
}
.item .infos .time {
  margin-top: 32rpx;
  font-size: 22rpx;
  color: #B4B4B4;
}
.item .infos .time text:first-child {
  margin-right: 60rpx;
}